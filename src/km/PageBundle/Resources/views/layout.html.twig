{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('assets/pages/kellermosh/css/app.css') }}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/pages/kellermosh/js/app.js') }}"></script>
{% endblock %}

{% block body %}

    <span class="hidden" id="current-page">{% block currentPage %}{% endblock %}</span>

    <!-- header images -->
    <div class="hidden" id="data-header-assets">
        <span>{{ asset('assets/pages/kellermosh/img/km0.jpg') }}</span>
        <span>{{ asset('assets/pages/kellermosh/img/km1.jpg') }}</span>
        <span>{{ asset('assets/pages/kellermosh/img/km2.jpg') }}</span>
    </div>

    <div id="wrap">

        <!-- HEADER -->
        <div class="km-header-container">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">

                        <div class="km-logo km-logo-header">
                            <h1>Kellermosh
                                <small>Das Metal-Event in Hoyerswerda!</small>
                            </h1>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- NAVIGATION -->
        <div class="km-navigation-container">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">

                        <ul class="km-nav">
                            <li id="nl-info"><a href="{{ path('info') }}">Info</a></li>
                            <li id="nl-bands"><a href="{{ path('info') }}">Bands</a></li>
                            <li id="nl-location"><a href="{{ path('location') }}">Location</a></li>
                            <li id="nl-contact"><a href="{{ path('contact') }}">Kontakt</a></li>
                        </ul>

                    </div>
                </div>
            </div>
        </div>

        <!-- CONTENT -->
        <div class="km-content-container">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 km-content km-font-open-sans">

                        {% block content %}
                        {% endblock %}

                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- FOOTER -->
    <div id="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 km-footer km-font-open-sans">

                    Kellermosh |
                    &copy; 2014, Florian Weber |
                    <a href="{{ path('imprint') }}">Impressum</a>

                </div>
            </div>
        </div>
    </div>

{% endblock %}