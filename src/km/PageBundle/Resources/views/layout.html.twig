{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('assets/pages/kellermosh/css/app.css') }}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/pages/kellermosh/js/app.js') }}"></script>
{% endblock %}

{% block ogp %}
    <meta property="og:url" content="{{ app.request.getUri() }}" />
    <meta property="og:title" content="{{ block('title') }}" />
    <meta property="og:image" content="" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content="440" />
    <meta property="og:image:height" content="440" />
    <meta property="og:description" content="Kellermosh - Das Metal Event in Hoyerswerda!" />
{% endblock %}

{% block analytics %}
{% endblock %}

{% block body %}

    <span class="hidden" id="current-page">{% block currentPage %}{% endblock %}</span>

    <!-- HEADER IMAGES -->
    <div class="hidden" id="data-header-assets">
        <span>{{ asset('assets/pages/kellermosh/img/header/km0.jpg') }}</span>
        <span>{{ asset('assets/pages/kellermosh/img/header/km1.jpg') }}</span>
        <span>{{ asset('assets/pages/kellermosh/img/header/km2.jpg') }}</span>
        <span>{{ asset('assets/pages/kellermosh/img/header/km3.jpg') }}</span>
        <span>{{ asset('assets/pages/kellermosh/img/header/km4.jpg') }}</span>
    </div>
    <!------------------->

    <div id="wrap">

        <!-- HEADER -->
        <div class="km-header-container">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">

                        <div class="km-logo km-logo-header">
                            <h1>Kellermosh
                                <small>Das Metal-Event in Hoyerswerda!</small>
                            </h1>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- NAVIGATION -->
        <div class="km-navigation-container">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">

                        <ul class="km-nav">
                            <li id="nl-info"><a href="{{ path('info') }}">Info</a></li>
                            <li id="nl-bands"><a href="{{ path('info') }}">Bands</a></li>
                            <li id="nl-location"><a href="{{ path('location') }}">Location</a></li>
                            <li id="nl-kontakt"><a href="{{ path('kontakt') }}">Kontakt</a></li>
                        </ul>

                    </div>
                </div>
            </div>
        </div>

        <!-- CONTENT -->
        <div class="km-content-container">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 km-content km-font-open-sans">

                        {% block content %}
                        {% endblock %}

                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- FOOTER -->
    <div id="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 km-footer km-font-open-sans">

                    Kellermosh |
                    &copy; 2014, Florian Weber |
                    <a href="{{ path('impressum') }}">Impressum</a>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
